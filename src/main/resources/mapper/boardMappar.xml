<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
    <insert id="save" parameterType="board">
        insert into board_table(boardWriter , boardPass ,boardTitle , boardContents  ) values (#{boardWriter} ,#{boardPass} , #{boardTitle}, #{boardContents}  )
    </insert>

    <select id="List" resultType="com.its.board.dto.BoardDTO">

select * from board_table
    </select>
    <select id="findId" parameterType="long" resultType="board">
        select*from  board_table where boardId=#{findId}
    </select>
    <update id="hits" parameterType="board">
        update board_table set boardHits=#{boardHits} where boardId=#{boardId}
    </update>
    <delete id="delete" parameterType="Long">
        delete from board_table where boardId=#{boardId}
    </delete>

</mapper>